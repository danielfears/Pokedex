<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity"
    android:background="@drawable/background">

    <RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:id="@+id/topcontent">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:src="@drawable/pokemonlogo"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="10dp"
            android:adjustViewBounds="true"
            android:id="@+id/logo"/>

        <ImageView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/slogan"
            android:src="@drawable/slogan"
            android:layout_below="@id/logo"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            android:layout_marginTop="50dp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttoncontainer"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_below="@+id/topcontent"
        android:layout_marginTop="50dp">

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/redblue"
            android:layout_alignParentLeft="true"
            android:layout_margin="5dp"
            android:background="@drawable/pokemonblue"/>

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/goldsilver"
            android:layout_alignParentLeft="true"
            android:layout_margin="5dp"/>

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/rubysapp"
            android:layout_margin="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/buttoncontainer2"
        android:layout_below="@+id/buttoncontainer"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/diampearl"
            android:layout_margin="5dp"/>

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/blackwhite"
            android:layout_margin="5dp"/>

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/xy"
            android:layout_margin="5dp"/>

    </LinearLayout>

</RelativeLayout>
